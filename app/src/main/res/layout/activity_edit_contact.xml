<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_twenty_four"
    android:padding="@dimen/margin_eight"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/IVEditContact"/>

    <EditText
        android:id="@+id/ETEditContactName"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/margin_eight"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/ETEditContactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_eight"
        android:hint="Phone Number"
        android:inputType="phone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_eight"
        android:text="Update Data"
        android:id="@+id/BtnEditContact"/>

</LinearLayout>


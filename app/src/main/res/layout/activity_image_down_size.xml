<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shray.myapplication.ui.ImageDownSizeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pick Image"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_four"
            android:id="@+id/BtnImagePick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Downsize Image"
            android:layout_margin="@dimen/margin_four"
            android:id="@+id/BtnImageDown"/>

    </LinearLayout>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/margin_twenty_four"
        android:layout_marginRight="@dimen/margin_twenty_four"
        android:id="@+id/IVImageDownSize"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_myprofile"/>

</RelativeLayout>
